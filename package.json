    "hash-wasm": "^4.12.0",
    "jsontoxml": "^1.0.1",
    "knip": "^5.45.0",
    "local-web-server": "^5.4.0",
    "precompress": "^12.0.7",
    "prettier": "^3.5.3",
    "sass": "^1.77.6",
    "typescript": "^5.7.3",
